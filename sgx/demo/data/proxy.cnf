##############################################################################
#           X509 certificate configuration for kmyth ECDH demo               #
##############################################################################

[req]
md                      = sha256
prompt                  = no
distinguished_name      = dn
req_extensions          = v3_ext

[dn]
C                       = "US"
O                       = "kmyth"
CN                      = "TestProxy"

[ v3_ext ]
subjectAltName          = @alt_names

[ alt_names ]
IP.0                    = 127.0.0.1
DNS.0                   = localhost
